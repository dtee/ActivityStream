<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Odl\ActivityStreamBundle\Entity\Activity">
        <indexes>
            <index unique="true" dropDups="true">
                <key name="id" order="desc" />
                <option name="safe" value="true" />
            </index>
        </indexes>

        <reference-one target-document="Odl\ActivityStreamBundle\Entity\Object" field="actor">
            <cascade>
                <all />
            </cascade>
        </reference-one>

        <field name="content" column="content" type="string" length="255" nullable="true" />

        <reference-one target-document="Odl\ActivityStreamBundle\Entity\Object" field="generator">
            <cascade>
                <all />
            </cascade>
        </reference-one>

        <field name="icon" column="image" type="object" />

        <reference-one target-document="Odl\ActivityStreamBundle\Entity\Object" field="object">
            <cascade>
                <all />
            </cascade>
        </reference-one>

        <field name="published" column="published" type="datetime" nullable="false"/>

        <reference-one target-document="Odl\ActivityStreamBundle\Entity\Object" field="provider">
            <cascade>
                <all />
            </cascade>
        </reference-one>

        <reference-one target-document="Odl\ActivityStreamBundle\Entity\Object" field="target">
            <cascade>
                <all />
            </cascade>
        </reference-one>

        <field name="title" column="title" type="string" nullable="true"/>

        <field name="updated" column="updated" type="datetime" nullable="true" />

        <field name="url" column="url" type="string" nullable="true" />

        <field name="verb" column="verb" type="string" nullable="false" />
        
    </mapped-superclass>

</doctrine-mapping>
